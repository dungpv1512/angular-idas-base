# Save exact versions in package.json
save-exact=true

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=false

# Disable package-lock.json auto-update
package-lock=true

# Set registry (uncomment if using private registry)
# registry=https://registry.npmjs.org/

# Engine strict mode
engine-strict=false

# Progress bar
progress=true

# Audit level
audit-level=moderate
